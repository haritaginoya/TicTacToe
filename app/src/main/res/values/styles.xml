<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textstyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">60sp</item>
        <item name="fontFamily">@font/permanent_marker_regular</item>
        <item name="android:textColor">@color/yelow</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="cardstyle" parent="CardView">

        <item name="android:layout_margin">5dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">#243642</item>
    </style>

    <style name="counttext" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/baloopaaji_variable_font_wght</item>
        <item name="android:textColor">#DAD4B5</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="countdigit" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">50sp</item>
        <item name="fontFamily">@font/archivo_variablefont_wdth_wght</item>
        <item name="android:textColor">#DAD4B5</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>